<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10 ">
      <h3>Prodcut details</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/products/add" class="btn btn-primary mt-2"><i class="fa fa-plus"></i> Add a product</a>
      <br />
      <div class="table-responsive mb-2">
        <table class="table table-bordered table-striped table-hover mt-2">
          <thead>
            <tr>
              <th>Product id</th>
              <th class="text-center">Product name</th>
              <th class="text-center">Descriptionr</th>
              <th class="text-center">price</th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < products.length; count++) { %>
            <tr>
              <td><%= products[count].Productid %></td>
              <td class="text-center"><%= products[count].Productname %></td>
              <td class="text-center"><%= products[count].Description %></td>
              <td class="text-center"><%= products[count].Price %></td>

              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE -->
                <!-- ------------------------ -->

                <a href="/products/<%= products[count]._id %>" class="btn btn-primary btn-small">
                  <i class="fas fa-pencil-alt"></i>Edit
                </a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- ------------------------ -->
      <!-- ADD the DELETE BUTTON HERE -->
      <!-- ------------------------ -->

      <form class="row" method="get" action="/products/delete">
        <div class="form-group col-md-6">

          <input type="text" class="form-control" id="NameDeteteTextField"
            placeholder="Please Enter Product name to delete" name="Productnamedelete" />
        </div>

        <button class="btn btn-warning btn-sm" type="submit">
          Delete</button>
      </form>


      <form method="get" class="row" action="/products/delete">
        <div class="form-group col-md-3">
          <input type="text" class="form-control" id="LowRangeTextField" placeholder="Low" name="LowPrice" />
        </div>
        <div class="form-group col-md-3">
          <input type="text" class="form-control" id="HighRangeTextField" placeholder="High" name="HighPrice" />
        </div>

        <button class="btn btn-warning btn-sm" type="submit">
          Delete</button>
      </form>






      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>